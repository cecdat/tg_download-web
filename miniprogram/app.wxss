/* app.wxss */
/* 全局变量和重置 */
page {
  --primary: #5271FF;
  --primary-gradient: linear-gradient(135deg, #5271FF 0%, #0047FF 100%);
  --secondary: #8E96FF;
  --accent: #FF52AF;
  --danger: #FF4B5C;
  --success: #00D68F;
  --warning: #FFBB00;
  --background: #F8FAFC;
  --text-main: #1E293B;
  --text-muted: #64748B;
  --text-light: #94A3B8;
  --card-bg: #FFFFFF;
  --border-color: #E2E8F0;
  
  background-color: var(--background);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: var(--text-main);
  line-height: 1.5;
  font-size: 28rpx;
}

/* 容器布局 */
.container {
  padding: 30rpx 30rpx 200rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* Premium 卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-hover:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

/* 标题样式 */
.title-main {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 10rpx;
  letter-spacing: -0.5px;
}

.title-sub {
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 400;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 输入框核心样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-muted);
  margin-bottom: 12rpx;
  display: block;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

.input-icon {
  position: absolute;
  left: 28rpx;
  z-index: 10;
  font-size: 36rpx;
  color: var(--text-muted);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.input-field {
  width: 100%;
  height: 100rpx;
  background: #F1F5F9;
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: var(--text-main);
  transition: all 0.2s ease;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.input-with-icon .input-field {
  padding-left: 80rpx;
}

.input-field-focus {
  background: #FFFFFF;
  border-color: var(--primary);
  box-shadow: 0 0 0 8rpx rgba(82, 113, 255, 0.1);
}

.input-placeholder {
  color: var(--text-light);
}

/* 按钮核心样式 */
.btn-primary {
  background: var(--primary-gradient);
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 26rpx;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  box-shadow: 0 10rpx 25rpx rgba(82, 113, 255, 0.25);
  transition: all 0.2s ease;
  border: none;
  line-height: normal;
}

.btn-primary:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(82, 113, 255, 0.2);
  opacity: 0.9;
}

.btn-secondary {
  background: #F1F5F9;
  color: var(--text-main);
  border-radius: 16rpx;
  padding: 26rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background: #E2E8F0;
  transform: scale(0.98);
}

.btn-danger {
  background: #FFF1F2;
  color: var(--danger);
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}

/* 弹窗系统 Modal Premium */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.4);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 100%;
  background: var(--card-bg);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.2);
  animation: modalScale 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes modalScale {
  from { transform: scale(0.9) translateY(40rpx); opacity: 0; }
  to { transform: scale(1) translateY(0); opacity: 1; }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text-main);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  background: #F1F5F9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  font-size: 40rpx;
}

.modal-body {
  padding: 20rpx 40rpx 40rpx 40rpx;
}

.modal-footer {
  padding: 20rpx 40rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

/* 进度条 Premium */
.progress-container {
  height: 12rpx;
  background: #F1F5F9;
  border-radius: 100rpx;
  overflow: hidden;
  margin: 16rpx 0;
}

.progress-filler {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 100rpx;
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
}

.progress-filler::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 标签 Tags */
.badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.badge-success { background: #DCFCE7; color: #15803D; }
.badge-danger { background: #FEE2E2; color: #B91C1C; }
.badge-warning { background: #FEF3C7; color: #B45309; }
.badge-info { background: #DBEAFE; color: #1D4ED8; }
.badge-orange { background: #FFEDD5; color: #EA580C; }

.waiting-mode {
  border-left: 8rpx solid #F59E0B !important;
  opacity: 0.9;
}

/* 实用工具 */
.flex-row { display: flex; align-items: center; }
.flex-between { display: flex; justify-content: space-between; align-items: center; }
.flex-center { display: flex; justify-content: center; align-items: center; }
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-40 { margin-top: 40rpx; }
.mb-20 { margin-bottom: 20rpx; }
.w-full { width: 100%; }
.text-muted { color: var(--text-muted); }
.text-sm { font-size: 24rpx; }

/* 转动动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(82, 113, 255, 0.1);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 美化小程序原生 Switch */
switch {
  transform: scale(0.8);
  transform-origin: right center;
  vertical-align: middle;
}

/* 针对部分高版本基础库的样式微调 */
.wx-switch-input {
  border-color: #E2E8F0 !important;
}