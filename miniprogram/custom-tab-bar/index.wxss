.tab-bar {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  z-index: 9999;
}

.tab-bar-container {
  width: 90%;
  height: 100%;
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 60rpx;
  display: flex;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  pointer-events: auto;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.item-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.tab-icon.active {
  transform: translateY(-4rpx) scale(1.2);
  filter: drop-shadow(0 4rpx 8rpx rgba(82, 113, 255, 0.3));
}

.tab-text {
  font-size: 20rpx;
  color: #94A3B8;
  font-weight: 500;
}

.tab-text.selected {
  color: #5271FF;
  font-weight: 700;
}

.active-dot {
  position: absolute;
  bottom: 12rpx;
  width: 6rpx;
  height: 6rpx;
  background: #5271FF;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(82, 113, 255, 0.8);
}
