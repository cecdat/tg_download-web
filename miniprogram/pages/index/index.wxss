/* pages/index/index.wxss */
.header-section {
  padding: 40rpx 0 20rpx 0;
}

.refresh-btn {
  font-size: 24rpx;
  color: #64748B;
  background: #F1F5F9;
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
}

/* 紧凑型状态网格 */
.status-grid-compact {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.status-item-mini {
  background: #F8FAFC;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(226, 232, 240, 0.5);
}

.status-icon-mini {
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 12rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  flex-shrink: 0;
}

.status-info-mini {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex: 1;
}

.status-label-mini {
  font-size: 22rpx;
  color: #64748B;
}

.status-value-mini {
  font-size: 30rpx;
  font-weight: 800;
  color: #1E293B;
}

.bg-blue { background: #E0E7FF; color: #4F46E5; }
.bg-purple { background: #F3E8FF; color: #9333EA; }
.bg-pink { background: #FCE7F3; color: #DB2777; }
.bg-orange { background: #FFEDD5; color: #EA580C; }

/* 下载列表 */
.download-item {
  background: #F8FAFC;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s ease;
}

.download-item:active {
  background: #F1F5F9;
  border-color: #E2E8F0;
}

.truncate {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 450rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.font-bold { font-weight: 700; }
.ml-20 { margin-left: 20rpx; }
.text-xs { font-size: 22rpx; }
.py-40 { padding-top: 40rpx; padding-bottom: 40rpx; }