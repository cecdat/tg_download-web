/* pages/tasks/tasks.wxss */
.header-section {
  padding: 40rpx 0 20rpx 0;
}

.btn-clear {
  font-size: 24rpx;
  color: #E11D48;
  background: #FFF1F2;
  padding: 10rpx 24rpx;
  border-radius: 100rpx;
}

.task-card {
  background: #F8FAFC;
  padding: 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid transparent;
}

.task-main {
  display: flex;
  align-items: center;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  background: #E2E8F0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.task-info {
  flex: 1;
}

.status-box {
  margin-left: 20rpx;
}

.btn-delete-link {
  font-size: 24rpx;
  color: #94A3B8;
  text-decoration: underline;
}

.btn-delete-link:active {
  color: #E11D48;
}

/* 分页 */
.pagination-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}

.btn-page {
  font-size: 26rpx;
  font-weight: 600;
  color: #5271FF;
  background: #EEF2FF;
  padding: 16rpx 32rpx;
  border-radius: 100rpx;
}

.btn-page.disabled {
  color: #CBD5E1;
  background: #F1F5F9;
}

.page-count {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 700;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.font-bold { font-weight: 700; }
.truncate { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300rpx; }
.ml-20 { margin-left: 20rpx; }
.py-40 { padding: 40rpx 0; }